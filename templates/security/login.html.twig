{% extends "base.html.twig" %}
{% block title 'Se connecter'%}
{% block body %}
    <div class="container mt-4">

        {% if error %}
            <div
                class="alert alert-danger">
                {# {{error}}  #}
                {{error.messageKey | trans(error.messagedata , 'security')}}
                {# | trans(error.messagedata , 'security') 会翻译错误为默认语言  #}
            </div>
        {% endif %}

        <form method="post" action="{{path('login')}}">
            <div class="form-group">
                <label for="username">Nom D'utilisateur</label>
                <input class="form-control" id="username" name="_username" type="text" value="demo">
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input class="form-control" id="password" name="_password" type="password" value="demo">
            </div>
          {#   <input type="hidden" name="go_to" value="{{ path('dashboard') }}"/>
            <input type="hidden" name="back_to" value="{{ path('forgot_password') }}"/>
            go_to , back_to 被  config/security.yaml 当成两个变量传入
         #}

            <button class="btn btn-primary" type="submit">Se connecter</button>
        </form>
    </div>


{% endblock  %}
